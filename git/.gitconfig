[user]
useConfigOnly = true
name = Matt Rudder
email = matt@mattrudder.com

[color]
ui = auto

[alias]
st = status --short
sum = summary
ci = commit
co = checkout
cd = !source ~/.githelpers && commit_amend_date
di = diff
dc = diff --cached
amend = commit --amend
aa = add --all
ff = merge --ff-only
pullff = pull --ff-only
noff = merge --no-ff
fa = fetch --all
pom = push origin master
b = branch
ds = diff --stat=160,120
dh1 = diff HEAD~1
ls-merged = !git fetch -p && git branch -vv | awk '/: gone]/{print $1}'
rm-merged = !git ls-merged | xargs git branch -d
rm-merged-force = !git ls-merged | xargs git branch -D
ls-untracked = ls-files --others --exclude-standard
line-count = !git ls-files --exclude-standard | xargs wc -l
line-count-untracked = !git ls-untracked | xargs wc -l

# Divergence (commits we added and commits remote added)
div = divergence

# Goodness (summary of diff lines added/removed/total)
gn = goodness
gnc = goodness --cached

# Fancy logging.
#   h = head
#   hp = head with patch
#   r = recent commits, only current branch
#   ra = recent commits, all reachable refs
#   l = all commits, only current branch
#   la = all commits, all reachable refs
head = !git l -1
h = !git head
hp = !source ~/.githelpers && show_git_head
r = !git l -30
ra = !git r --all
l = "!source ~/.githelpers && pretty_git_log"
la = !git l --all
sync = "!find . -maxdepth 2 -type d -name .git -execdir git pull \\;"
lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
pod = push origin develop
hd = !git head
br = branch

[core]
pager = less -R
editor = code -r -w
excludesfile = ~/.gitignore
autocrlf = input

[push]
default = upstream

[pull]
rebase = true

[diff]
tool = default-difftool

[difftool]
cmd = code --wait --new-window --diff $LOCAL $REMOTE

[filter "lfs"]
clean = git-lfs clean %f
smudge = git-lfs smudge %f
required = true
process = git-lfs filter-process

[include]
path = ~/.gitconfig-work

[init]
	defaultBranch = main
